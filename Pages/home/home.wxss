/* 总布局 */
.page-begin{
  width: 100%;
  margin-bottom: 1rpx;
  border-bottom: 1rpx solid grey;
}
.container{
  display: flex;
  width: 100%;
  justify-content: center;
}
.page-body{
  display: grid;
  row-gap: 30rpx;
  width: 95%;
}
.section-title{
  color: #333;
  font-weight: 250;
  font-size: 28rpx;
  font-family: cursive;
}
/* 头图 */
.section-swiper .swiper-item{
  display: flex;
}
.section-swiper .swiper-item image{
  width: 100%;
}
/* 教室选择 */
.section-class{
  display: flex;
  flex-direction: column;
  position: relative;
}
.section-class .picker-class{
  margin: 0 auto;
  margin-top: 8rpx;
  padding-bottom: 3rpx;
  width: 95%;
  border-bottom: 1rpx solid #c8c8c8;
  color:#1f1f1f;
  font-weight: 400;
  font-size: 35rpx;
  font-family: cursive;
}
.section-class .picker-icon{
  position:absolute;
  top:60rpx;
  right:50rpx;
  width: 0rpx;
  height: 0rpx;
  border: 11rpx solid;
  border-color: transparent;
  border-top-color: #c8c8c8;
}
/* 日期选择 */
.section-day .date-item{
  display: flex;
  width: 95%;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 8rpx;
  justify-content: space-between;
  font-family: cursive;
  position: relative;
}
.section-day .day-item{
  display: inline-block;
  color:#1f1f1f;
  height: 40rpx;
}
.section-day .first{
  margin-right: 25rpx;
}
.section-day .s-today{
  padding-bottom: 6rpx;
  font-weight: 400;
  font-size: 35rpx;
  opacity: 1;
  border-bottom: 1rpx solid #c8c8c8;
  transition: all 0.3s linear;
}
.section-day .s-tomorrow{
  padding-bottom: 6rpx;
  font-weight: 300;
  font-size: 25rpx;
  opacity: 0.5;
  border-bottom: 1rpx solid transparent;
  transition: all 0.3s linear;
}
.section-day .week-item-today{
  position: absolute;
  right: -40rpx;
  transition: all 0.3s linear;
}
.section-day .week-item-tomorrow{
  position: absolute;
  right: 25rpx;
  transition: all 0.3s linear;
}
.section-day .w-today{
  font-size: 30rpx;
  opacity: 1;
  transition: all 0.3s linear;
}
.section-day .w-tomorrow{
  font-size: 15rpx;
  opacity: 0;
  transition: all 0.3s linear;
}
/* 时间选择 */
.section-time{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.section-time .section-title{
  text-align: center;
  width: 100rpx;
}
/* 查询按钮 */
.section-inquire{
  margin-top:50rpx;
  display: flex;
}
.section-inquire .inquire-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 80rpx;
  background-color:#6493f9;
  box-shadow: 1rpx 1rpx 2rpx 2rpx #6493f9;
}
.section-inquire .inquire-text{
  color: white;
  font-family: cursive;
  font-size: 36rpx;
  line-height: 35rpx;
}
